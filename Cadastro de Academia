print("Bem vindo á plataforma da Academia Start Strong! \n")

while True:
    # Solicitação dos dados do usuário
    nome_completo = input("Digite o nome completo: ")
    cpf = input("Digite o CPF: ")
    idade = input("Digite a idade: ")
    peso = input("Digite o peso (kg): ")
    altura = input("Digite sua altura (m)")
    objetivo = input("Informe o objetivo")

    # Exibição dos dados cadastrados
    print("\nCadastro realizado com sucesso")
    print("nome:",nome_completo)
    print("CPF:", cpf)
    print("Peso:", peso)
    print("Altura:", altura)
    print("objetivo:", objetivo)

    # Pergunta se o usuário deseja continuar ou sair
    continuar = input("\nDigite '1' para cadastra outro usuário ou qualquer outro numero para sair: ")
    if continuar != '1':
      break # sai do loop
print("\nCadastro finalizado. obrigado por se cadastrar na nossa plataforma!")
